<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.tnine.trainstatus.Fragments.LiveStationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/grey_200">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/help"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/user_msg_2"
                android:textColor="@color/grey_500"
                android:textSize="13dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Trains From Station"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/gotham"
                android:textSize="15dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/train_icon"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#1Fffffff"
                android:layout_marginBottom="25dp">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/acmtv_live_station_code"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:hint="Enter Station Name"
                    android:textColorHint="@color/grey_400"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:inputType="text"
                    android:textSize="13dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    />
            <!--<io.tnine.trainstatus.Utils.DelayAutoCompleteTextView-->
                <!--android:inputType="textCapSentences"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="40dp"-->
                <!--android:gravity="center"-->
                <!--android:visibility="gone"-->
                <!--android:layout_weight="1"-->
                <!--android:hint="Station Code/Name"-->
                <!--android:textSize="15dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:background="@drawable/edit_text_bg"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:imeOptions="flagNoExtractUi|actionSearch"/>-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="13"
                    android:visibility="visible"
                    android:id="@+id/cancel_stn_txt"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:src="@drawable/cancel_icon"/>
                </RelativeLayout>
        </LinearLayout>
            <Button
                android:layout_width="100dp"
                android:background="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="Check"
                android:layout_marginBottom="15dp"
                android:id="@+id/btn_get_train_arrivals"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7591469242682758/1689870281">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

        <Button

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_cancel_input_live_station"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="-30dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>
