<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.tnine.trainstatus.Fragments.TrainRouteDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/grey_200">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/help"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/user_msg"
                android:textColor="@color/grey_500"
                android:textSize="13dp"
                android:paddingLeft="11dp"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Train Route"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/train_icon"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#1Fffffff">
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:id="@+id/auto_txt_route"
                    android:hint="Train Code/Name"
                    android:textColorHint="@color/grey_400"
                    android:fontFamily="@font/gotham"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    />
                <!--<io.tnine.trainstatus.Utils.DelayAutoCompleteTextView-->
                    <!--android:id="@+id/acmtv_route_train_code"-->
                    <!--android:inputType="textCapSentences"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:padding="5dp"-->
                    <!--android:textSize="13dp"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:fontFamily="@font/gotham"-->
                    <!--android:background="@drawable/edit_text_bg"-->
                    <!--android:hint="Train Code/Name"-->
                    <!--android:imeOptions="flagNoExtractUi|actionSearch"/>-->
                <Button
                    android:id="@+id/btn_cancel_input_live_train"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="-30dp"
                    android:background="@android:drawable/ic_menu_close_clear_cancel" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="13"
                    android:visibility="visible"
                    android:gravity="center"
                    android:id="@+id/cancel_route_txt">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"
                        android:src="@drawable/cancel_icon"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:layout_width="100dp"
                android:background="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:text="Check"
                android:layout_marginBottom="15dp"
                android:id="@+id/btn_get_train_route"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7591469242682758/1689870281">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>
        <Button
            android:id="@+id/btn_cancel_input_route"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-30dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />


</RelativeLayout>